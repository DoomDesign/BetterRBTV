{
  "manifest_version": 2,

  "name": "BRBTV",
  "description": "Proof of concept. Zeigt lokal RBTV-Emotes anstelle der Youtube-Emotes an.",
  "version": "0.1",
  
   "content_scripts": [
    {
      "matches": ["http://youtube.com/live_chat*", "https://youtube.com/live_chat*", "http://www.youtube.com/live_chat*", "https://www.youtube.com/live_chat*", "http://gaming.youtube.com/live_chat*", "https://gaming.youtube.com/live_chat*"],
      "css": ["emotes.css"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  
   "web_accessible_resources": [
      "emotes/*.png"
    ]
}