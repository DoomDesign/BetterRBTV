{
  "manifest_version": 2,
  "name": "BetterRBTV",
  "description": "Komfortfunktionen für YouTube™ Live.",
  "version": "0.2.0",
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "lib/jquery-3.1.0.slim.min.js",
        "lib/dateformat.js",
        "emoji_to_keyword.json",
        "util.js",
        "default_settings.js",
        "wait_for_chat_finished.js",
        "timestamp.js",
        "chat_filter.js",
        "keyword_replacement.js",
        "user_suggestions.js",
        "entry.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    "emotes/*.png",
    "emotes.css"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon-32.png"
  }
}